<div class="row">
    <div class="span8">
        <h1>Workouts</h1>
    </div>
</div>&nbsp;
<div class="row">
    <div class="span6">
        <h2>Standard Workouts</h2>
        <% if @officialWorkouts %>
          <% @officialWorkouts.group_by(&:workout_category).sort.each do |c,ws| %>
            <br /><h3><%= c.category %></h3>
              <% ws.each do |w| %>
                <%= link_to "#{w.name}", workout_path(w) %><br />
              <% end %>
          <% end %>
        <% end %>
        <br />
        <h2>Custom Workouts</h2> 
        <%= link_to "Add Workout", new_workout_path, :class => 'btn btn-primary' %><br />
        <% if @customWorkouts %>
          <% @customWorkouts.group_by(&:workout_category).sort.each do |c,ws| %>
            <br /><h3><%= c.category %></h3>
              <% ws.each do |w| %>
                <%= link_to "#{w.name}", workout_path(w) %><br />
              <% end %>
          <% end %>
        <% else %>
          <p>You have no custom workouts at this time</p>
        <% end %>
    </div>
</div>
