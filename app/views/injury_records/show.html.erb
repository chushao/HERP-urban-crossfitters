<div class="row">
    <div class="span8">
        <h2><%= link_to @injury.name, edit_injury_record_path(@injury) %></h2>
	<p><%= @injury.description %></p>
	<p><strong>Severity: </strong>
	    <span class="label">
	    <%= @injury.severity %>
            </span>
	</p>
	<p><strong>Injury Date: </strong><%= @injury.start_date %></p
	<% if @injury.ongoing %>>
	  <p><strong>Recovery Date: </strong><%= 'Ongoing' %></p>
	<% else %>
          <p><strong>Recovery Date: </strong><%= @injury.end_date %></p>
	<% end %>

      <%= link_to 'Edit Injury', edit_injury_record_path(@injury), :class => "btn btn-primary" %> 
      <%= link_to 'Delete Injury', injury_record_path(@injury),
            :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-primary" %><br />
    </div>
</div>
